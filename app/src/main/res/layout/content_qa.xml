<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        tools:context=".qa.QaFragment">

    <TextView
            android:id="@+id/tv"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="French vocabulary 1"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonPlay"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/recyclerview_qa_item"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/buttonPlay"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_circle_play"
            android:id="@+id/buttonPlay" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_circle_add"
            android:id="@+id/buttonAdd"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonPlay"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonPlay"/>
    <Button
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:background="@drawable/ic_circle_bar"
            android:id="@+id/buttonScores"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonPlay"
            app:layout_constraintStart_toEndOf="@+id/buttonPlay" android:layout_marginStart="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>