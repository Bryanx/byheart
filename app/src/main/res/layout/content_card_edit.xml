<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cardEditQuestionLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="74dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:hint="@string/question"
            app:errorEnabled="true"
            app:hintEnabled="false"
            android:textColorHint="?mainEditTextColorHint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cardEditQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="?mainHeaderTextColor"
                app:backgroundTint="@color/grey_500"
                android:textColorHint="?mainEditTextColorHint"
                android:hint="@string/card_front"
                android:inputType="textNoSuggestions"
                android:ems="10"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cardEditAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer"
            app:errorEnabled="true"
            app:hintEnabled="false"
            android:textColorHint="?mainEditTextColorHint"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardEditQuestionLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cardEditAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:backgroundTint="@color/grey_500"
                android:textColor="?mainHeaderTextColor"
                android:textColorHint="?mainEditTextColorHint"
                android:hint="@string/card_back"
                android:inputType="textNoSuggestions"
                android:ems="10"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:id="@+id/btnAddAnotherCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add another card"
            app:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardEditAnswerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>