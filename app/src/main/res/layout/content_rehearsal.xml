<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/rehearsalCounter"
            android:text="@string/slash"
            android:gravity="center"
            android:textSize="12sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/rehearsal_cards"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.example.byheart.shared.views.AnimatingRelativeLayout
            android:id="@+id/rehearsal_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:minHeight="250dp"
            android:layout_marginTop="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="96dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.494">
        <com.example.byheart.rehearsal.views.RehearsalCardView
                android:id="@+id/cardFront"
                android:layout_centerInParent="true"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:gravity="center"
                android:textSize="@dimen/edit_text_size"
                android:textAlignment="center"
                android:background="@drawable/shadow"/>

        <com.example.byheart.rehearsal.views.RehearsalCardView
                android:id="@+id/cardBack"
                android:layout_width="225dp"
                android:layout_centerInParent="true"
                android:layout_height="225dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/edit_text_size"
                android:alpha="0.0"
                android:background="@drawable/shadow"/>

        <ImageView
                android:id="@+id/ivPronounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:tint="@color/grey_500"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/pronounce_text"/>

    </com.example.byheart.shared.views.AnimatingRelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rehearsal_typed"
            android:layout_width="0dp"
            android:visibility="visible"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rehearsal_cards" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type_your_answer"
                app:errorEnabled="true"
                app:hintEnabled="false"
                android:textColorHint="?mainEditTextColorHint"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"
                android:layout_marginStart="2dp" android:layout_marginEnd="52dp"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintVertical_bias="0.501" android:id="@+id/textInputLayout">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/type_your_answer"
                    android:backgroundTint="@color/grey_500"
                    android:textSize="20sp"
                    style="@style/editTextDayNight"
                    android:textColor="?mainHeaderTextColor"
                    android:textColorHint="?mainEditTextColorHint"
                    android:inputType="textNoSuggestions"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
                android:text="@string/go"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/textInputLayout"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textInputLayout" android:layout_marginTop="4dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rehearsal_memory"
            android:layout_height="65dp"
            android:layout_width="match_parent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rehearsal_cards">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cardBtnCorrect"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                app:elevation="0dp"
                android:src="@drawable/ic_done_black_24dp"
                app:backgroundTint="?mainBackgroundColorLight"
                android:tint="@color/green"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="parent"
        />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cardBtnFalse"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                app:elevation="0dp"
                android:src="@drawable/ic_close_black_24dp"
                app:backgroundTint="?mainBackgroundColorLight"
                android:tint="@color/red"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="parent"
        />
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent=".5"
                android:id="@+id/guideline"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rehearsal_multiple_choice"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/rehearsal_cards"
            app:layout_constraintEnd_toEndOf="@+id/rehearsal_cards"
            app:layout_constraintTop_toBottomOf="@+id/rehearsal_cards" app:layout_constraintBottom_toBottomOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>