<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/rehearsalCounter"
            android:text="@string/slash"
            android:gravity="center"
            android:textSize="12sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/rehearsal_cards"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <nl.bryanderidder.byheart.shared.views.AnimatingRelativeLayout
            android:id="@+id/rehearsal_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:minHeight="250dp"
            android:layout_marginTop="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="96dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.494">
        <nl.bryanderidder.byheart.rehearsal.views.RehearsalCardView
                android:id="@+id/cardFront"
                android:layout_centerInParent="true"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:gravity="center"
                android:textSize="@dimen/edit_text_size"
                android:textAlignment="center"
                android:background="@drawable/shadow"/>

        <nl.bryanderidder.byheart.rehearsal.views.RehearsalCardView
                android:id="@+id/cardBack"
                android:layout_width="225dp"
                android:layout_centerInParent="true"
                android:layout_height="225dp"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/edit_text_size"
                android:alpha="0.0"
                android:background="@drawable/shadow"/>

        <nl.bryanderidder.byheart.rehearsal.views.FlippingImageView
                android:id="@+id/ivPronounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volume_up_black_24dp"
                android:tint="@color/grey_500"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/pronounce_text"/>

    </nl.bryanderidder.byheart.shared.views.AnimatingRelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>