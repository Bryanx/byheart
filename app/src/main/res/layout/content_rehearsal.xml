<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/card_question"
            android:text="Question"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center"
            android:textSize="19sp"
            android:textAlignment="center"
            android:background="@drawable/shadow"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/card_button_correct"/>

    <TextView
            android:id="@+id/card_answer"
            android:text="Answer"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="19sp"
            android:alpha="0.0"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/shadow"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/card_button_correct"/>

    <Button
            android:id="@+id/card_button_correct"
            android:text="Correct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:background="@drawable/card_green"
            app:layout_constraintEnd_toEndOf="@+id/card_answer"
            app:layout_constraintStart_toStartOf="@+id/card_answer" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/card_button_false"/>
    <Button
            android:id="@+id/card_button_false"
            android:text="Wrong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@drawable/card_red"
            app:layout_constraintEnd_toEndOf="@+id/card_answer"
            app:layout_constraintStart_toStartOf="@+id/card_answer" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>