<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="mainBackgroundColor">@color/white</item>
        <item name="mainBackgroundColorLighter">@color/grey_100</item>
        <item name="mainBackgroundColorLight">@color/grey_200</item>
        <item name="dialogBackgroundColor">@color/white</item>
        <item name="mainHeaderTextColor">@color/black</item>
        <item name="mainCard">@drawable/card_light</item>
        <item name="mainEditTextColorHint">@color/grey_400</item>
        <item name="activeActionBarTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="mainTextColor">@color/grey_700</item>
        <item name="cardTextColor">@color/grey_800</item>
        <item name="elevation">0dp</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="activeActionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="mainBackgroundColor">@color/black</item>
        <item name="mainBackgroundColorLighter">@color/grey_900</item>
        <item name="mainBackgroundColorLight">@color/grey_800</item>
        <item name="dialogBackgroundColor">@color/grey_900</item>
        <item name="mainCard">@drawable/card_dark</item>
        <item name="mainHeaderTextColor">@color/white</item>
        <item name="mainEditTextColorHint">@color/grey_600</item>
        <item name="mainTextColor">@color/grey_500</item>
        <item name="cardTextColor">@color/grey_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="DarkDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:background">#2E2E2E</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="qa_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>
    <style name="customFab">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="editTextDayNight">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="backgroundTint">@color/grey_500</item>
    </style>
    <style name="ButtonMultipleChoice" parent="Widget.AppCompat.Button.Borderless">
        <item name="layout_constraintWidth_percent">.4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?mainBackgroundColorLighter</item>
    </style>

    <style name="rehearsal_card">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">225dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

    <style name="SlidingDialog">
        <item name="android:windowEnterAnimation">@animator/pop_in</item>
        <item name="android:windowExitAnimation">@animator/pop_out</item>
    </style>

</resources>
