<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorGreen">@color/green</item>
        <item name="mainBackgroundColor">@color/white</item>
        <item name="mainBackgroundColorLighter">@color/grey_100</item>
        <item name="mainBackgroundColorLight">@color/grey_200</item>
        <item name="dialogBackgroundColor">@color/white</item>
        <item name="dialogBackgroundButton">@color/grey_100</item>
        <item name="dialogButtonIconColor">@color/colorPrimary</item>
        <item name="mainCard">@drawable/card_light</item>
        <item name="mainHeaderTextColor">@color/black</item>
        <item name="mainEditTextColorHint">@color/grey_400</item>
        <item name="activeActionBarTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="mainTextColor">@color/grey_700</item>
        <item name="cardTextColor">@color/grey_800</item>
        <item name="elevation">0dp</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeDark" parent="AppTheme">
        <item name="colorGreen">@color/greenDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="activeActionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="mainBackgroundColor">@color/black</item>
        <item name="mainBackgroundColorLighter">@color/grey_900</item>
        <item name="mainBackgroundColorLight">@color/grey_800</item>
        <item name="dialogBackgroundColor">@color/grey_900</item>
        <item name="dialogBackgroundButton">@color/grey_800</item>
        <item name="dialogButtonIconColor">@color/white</item>
        <item name="mainCard">@drawable/card_dark</item>
        <item name="mainHeaderTextColor">@color/white</item>
        <item name="mainEditTextColorHint">@color/grey_600</item>
        <item name="mainTextColor">@color/grey_500</item>
        <item name="cardTextColor">@color/grey_500</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="rehearsal_card">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">225dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>
</resources>